{
  "manifest_version": 3,
  "name": "Ukraine Bomb Shelter Finder",
  "version": "1.3",
  "description": "Find nearby bomb shelters in Ukraine",
  "permissions": [
    "storage",
    "alarms",
    "geolocation"
  ],
  "host_permissions": [
    "https://overpass-api.de/*",
    "https://nominatim.openstreetmap.org/*",
    "https://*.openstreetmap.org/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Open Bomb Shelter Map"
  }
}